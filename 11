#include <iostream>

int main() {
    int n;
    int sum = 0;
    int i = 1;

    std::cout << "لطفاً یک عدد صحیح مثبت وارد کنید: ";
    std::cin >> n;

    // محاسبه مجموع با استفاده از حلقه while
    while (i <= n) {
        sum += i;
        ++i;
    }

    std::cout << "مجموع اعداد از 1 تا " << n << " برابر است با: " << sum << std::endl;

    return 0;
}
