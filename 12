#include <iostream>

int main() {
    int n;
    int sum = 0;

    std::cout << "لطفاً یک عدد صحیح مثبت وارد کنید: ";
    std::cin >> n;

    // محاسبه مجموع با استفاده از حلقه for
    for (int i = 1; i <= n; ++i) {
        sum += i;
    }

    std::cout << "مجموع اعداد از 1 تا " << n << " برابر است با: " << sum << std::endl;

    return 0;
}
